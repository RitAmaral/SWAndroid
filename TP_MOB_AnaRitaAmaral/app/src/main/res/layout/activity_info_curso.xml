<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/azul_fundo"
    tools:context=".views.InfoCursoActivity">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/imagem_cesae"
        android:layout_marginVertical="10dp"
        android:src="@drawable/iconcesae"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_id"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:hint="ID"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_nome"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:hint="@string/nome"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_local"
        android:hint="@string/local"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_inicio"
        android:hint="@string/inicio"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_fim"
        android:hint="@string/fim"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_preco"
        android:hint="@string/preco"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_duracao"
        android:hint="@string/duracao"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_edicao"
        android:hint="@string/edicao"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:gravity="center" >
        <Button
            android:id="@+id/botao_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textSize="16sp"
            android:backgroundTint="#AB73AF"
            android:text="@string/editar" />
        <Button
            android:id="@+id/botao_eliminar"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:backgroundTint="#5E1F6A"
            android:text="@string/eliminar" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view"/>
</LinearLayout>